{
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*_templ.go": true
  },
  "editor.formatOnSave": true,
  "gopls": {
    "formatting.local": "github.com/gofs-cli/gofs",
    "formatting.gofumpt": true,
    "build.buildFlags": ["-tags=unit,gendata"]
  },
  "go.testFlags": ["-tags=unit,gendata", "-v", "-count=1"],
  "go.testEnvFile": "${workspaceFolder}/.env",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "[templ]": {
    "editor.defaultFormatter": "a-h.templ"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.includeLanguages": {
    "templ": "html"
  },
  "emmet.includeLanguages": {
    "templ": "html"
  }
}
